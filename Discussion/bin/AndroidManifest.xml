<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.discuss"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:name=".DiscussApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity
            android:name="com.example.discuss.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".EnterRoomActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CreateRoomActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.meeting.ChatActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.meeting.RoomInfoActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.meeting.LookIdeaActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.meeting.SendIdeaActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.meeting.HostActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.meeting.ShowResultActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>